{
  "name": "cocoapods-decocoadocs",
  "version": "0.0.0",
  "description": "A web server for CocoaPods stats",
  "main": "index.js",
  "author": "Orta + Matt Dole",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "test": "jest",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "precommit": "lint-staged; yarn build;",
    "prepush": "jest"
  },
  "dependencies": {
    "@octokit/rest": "^14.0.9",
    "@types/dotenv": "^4.0.2",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.3",
    "@types/node": "^9.4.6",
    "@types/node-fetch": "^1.6.7",
    "@types/pg": "^7.4.4",
    "aws-sdk": "^2.202.0",
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "node-fetch": "^2.0.0",
    "parse-github-url": "^1.0.2",
    "pg": "^7.4.1",
    "prettier": "^1.10.2",
    "ts-jest": "^22.0.4",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.8.0",
    "typescript": "^2.7.2"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "bracketSpacing": true
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(.test)\\.(ts|tsx)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  },
  "lint-staged": {
    "*.json": ["yarn prettier --write", "git add"],
    "*.ts": ["tslint --fix", "yarn prettier --write", "git add"],
    "*test.ts": ["jest -u"],
    "*.md": ["yarn prettier --write", "git add"]
  }
}
